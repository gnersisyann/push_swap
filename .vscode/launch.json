{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB Debug push_swap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap",
            "args": ["15", "40", "24", "20", "10"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "set print pretty on",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Включить отображение массивов",
                    "text": "set print array on",
                    "ignoreFailures": true
                },
                {
                    "description": "Показывать индексы массивов",
                    "text": "set print array-indexes on",
                    "ignoreFailures": true
                },
                {
                    "description": "Установить макс. количество элементов массива для печати",
                    "text": "set print elements 100",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build with debug symbols",
            "miDebuggerPath": "/usr/bin/gdb",
            "visualizerFile": "${workspaceFolder}/.vscode/visualizers.natvis"
        },
        {
            "name": "GDB Debug без сборки",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap",
            "args": ["5", "4", "3", "2", "1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "set print pretty on",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Включить отображение массивов",
                    "text": "set print array on",
                    "ignoreFailures": true
                },
                {
                    "description": "Показывать индексы массивов",
                    "text": "set print array-indexes on",
                    "ignoreFailures": true
                },
                {
                    "description": "Установить макс. количество элементов массива для печати",
                    "text": "set print elements 100",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "visualizerFile": "${workspaceFolder}/.vscode/visualizers.natvis"
        }
    ]
}
